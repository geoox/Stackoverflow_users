<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>

<div class="container">
    <div class="row">
        <% for(var i=0;i<items.length;i++){ %>

        <div class="col s12 l3">
            <a class="modal-trigger" href="#modal<%=i%>">
            <div class="card">
                <div class="card-image">
                    <img src="<%= items[i]["profile_image"] %>">
                </div>
                <div class="card-content">
                    <span class="card-title"><%= items[i]["display_name"] %></span>
                </div>
            </div>
            </a>
        </div>
        <!-- Modal Structure -->
<div id="modal<%=i%>" class="modal">
        <div class="modal-content">
          <h4><%= items[i]["display_name"] %></h4>

          <img src="<%= items[i]["profile_image"] %>">
          <br>
          <span class="element">Location: <%= items[i]["location"]%></span>
          <br>
          <span class="element">Age: <%= items[i]["age"]%></span>

          <div class="row element" id="badges">
            <div class="col s3"></div>
            <div class="col s2"><img src="https://png.icons8.com/color/50/000000/medal2.png"></div>
            <div class="col s2"><img src="https://png.icons8.com/color/50/000000/medal-second-place.png"></div>
            <div class="col s2"><img src="https://png.icons8.com/color/50/000000/medal2-third-place.png"></div>
            <div class="col s3"></div>
          </div>

          <div class="row" id="badges-scores">
                <div class="col s3"></div>
                <div class="col s2"><%=items[i]["badge_counts"]["gold"] %></div>
                <div class="col s2"><%=items[i]["badge_counts"]["silver"]%></div>
                <div class="col s2"><%=items[i]["badge_counts"]["bronze"]%></div>
                <div class="col s3"></div>
              </div>
        </div>
        <div class="modal-footer">
          <a href="#!" class="modal-action modal-close waves-effect btn-flat">Close</a>
        </div>
      </div>
        <% } %>
    </div>
</div>

<script>
$(document).ready(function(){
    $('.modal').modal();
  });
</script>